doctype html
html
  head
    meta(charset='UTF-8')
    title CSIE Basketball
    link(rel='stylesheet', href='../stylesheets/reset.css')
    link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='../stylesheets/style.css')
  body
    .module.form-module
      .toggle
        i.fa.fa-times.fa-pencil
      .form
        h2 Login to your account
        form(method='post', action='')
          input(type='text', name='loginID', placeholder='Student ID')
          input(type='password', name='password', placeholder='Password')
          button(type='submit', name='loginSub') Submit
      .form
        h2 Create an account
        form(method='post', action='')
          input(type='text', name='registerID', placeholder='Student ID')
          input(type='password', name='password', placeholder='Password')
          button(type='submit', name='registerSub') Submit
      .cta
        a(href='#') Forgot your password?
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
    script(src='../javascripts/login.js')
